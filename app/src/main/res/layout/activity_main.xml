<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="10"
    tools:context="com.cookandroid.hw2.MainActivity"
    android:background="#AAA0FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="#000000"
        android:padding="3dp">

        <TextView
            android:background="#000000"
            android:textColor="#ffff00"
            android:textColorHint="#ffff00"
            android:padding="5dp"
            android:minLines="3"
            android:maxLines="3"
            android:id="@+id/result_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="버튼을 입력하세요"
            android:gravity="right"
            android:textSize="20dp" />
    </LinearLayout>

    <TableLayout
        android:background="#FFFF00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:stretchColumns="2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RadioGroup
                android:background="#AAA0FD"
                android:id="@+id/radioG"
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:layout_span="4"
                android:paddingBottom="2dp"
                android:paddingTop="2dp">
                <RadioButton
                    android:background="#000000"
                    android:textColor="#ffff00"
                    android:checked="true"
                    android:id="@+id/Dec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Decimal"
                    android:gravity="center"/>

                <RadioButton
                    android:background="#ECCBC0"
                    android:id="@+id/Hex"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Heximal"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </RadioGroup>


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"> <!-- 1, 2, 3, + -->
            <Button
                android:background="#000000"
                android:textColor="#ffff00"
                android:id="@+id/One"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:text="1"
                android:onClick="Onclick"/>

            <Button
                android:background="#000000"
                android:textColor="#ffff00"
                android:id="@+id/Two"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:text="2"
                android:onClick="Onclick"/>

            <Button
                android:background="#000000"
                android:textColor="#ffff00"
                android:id="@+id/Three"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:text="3"
                android:onClick="Onclick"/>

            <Button
                android:background="#ECCBC0"
                android:id="@+id/Plus"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:text="＋"
                android:onClick="Onclick"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"> <!-- 4, 5, 6, - -->
            <Button
                android:background="#000000"
                android:textColor="#ffff00"
                android:id="@+id/Four"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:text="4"
                android:onClick="Onclick"/>

            <Button
                android:background="#000000"
                android:textColor="#ffff00"
                android:id="@+id/Five"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:text="5"
                android:onClick="Onclick"/>

            <Button
                android:background="#000000"
                android:textColor="#ffff00"
                android:id="@+id/Six"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:text="6"
                android:onClick="Onclick"/>

            <Button
                android:background="#ECCBC0"
                android:id="@+id/Minus"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:text="－"
                android:onClick="Onclick"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"> <!-- 7, 8, 9, X -->
            <Button
                android:background="#000000"
                android:textColor="#ffff00"
                android:id="@+id/Seven"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:text="7"
                android:onClick="Onclick"/>

            <Button
                android:background="#000000"
                android:textColor="#ffff00"
                android:id="@+id/Eight"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:text="8"
                android:onClick="Onclick"/>

            <Button
                android:background="#000000"
                android:textColor="#ffff00"
                android:id="@+id/Nine"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:text="9"
                android:onClick="Onclick"/>

            <Button
                android:background="#ECCBC0"
                android:id="@+id/Times"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:text="×"
                android:onClick="Onclick"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"> <!-- 0, ., =, / -->
            <Button
                android:background="#000000"
                android:textColor="#ffff00"
                android:id="@+id/Zero"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:text="0"
                android:onClick="Onclick"/>

            <Button
                android:background="#ECCBC0"
                android:id="@+id/Point"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:text="."
                android:onClick="Onclick"/>

            <Button
                android:background="#ECCBC0"
                android:id="@+id/Equals"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:text="="
                android:onClick="Onclick"/>

            <Button
                android:background="#ECCBC0"
                android:id="@+id/Divide"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:text="÷"
                android:onClick="Onclick"/>
        </TableRow>
    </TableLayout>

</LinearLayout>
